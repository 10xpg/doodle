generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum Gender {
  M
  F
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  lastname  String
  firstname String
  gender    Gender
  phone     String?
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  lastname  String
  firstname String
  gender    Gender
  phone     String?
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
